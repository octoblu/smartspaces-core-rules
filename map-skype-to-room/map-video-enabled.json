{
  "if": {
    "updateVideoEnabledWhenTrue": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".state.videoEnabled",
            "operator": "equal",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.genisys.room.genisys.customerDevices.customer.uuid}}",
          "data": {
            "$set": {
              "genisys.videoEnabled": true
            }
          }
        }
      }
    },
    "updateVideoEnabledWhenFalse": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".state.videoEnabled",
            "operator": "equal",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.genisys.room.genisys.customerDevices.customer.uuid}}",
          "data": {
            "$set": {
              "genisys.videoEnabled": false
            }
          }
        }
      }
    }
  },
  "else": {
    "unset": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.genisys.room.genisys.customerDevices.customer.uuid}}",
          "data": {
            "$unset": {
              "genisys.videoEnabled": false
            }
          }
        }
      }
    }
  }
}
