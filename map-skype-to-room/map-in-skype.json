{
  "rules": {
    "updateAudioEnabledWhenTrue": {
      "conditions": {
        "any": [
          {
            "fact": "data",
            "path": ".state.meeting",
            "operator": "equal",
            "value": null
          },
          {
            "fact": "data",
            "path": ".state.meeting",
            "operator": "exists",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.uuid}}",
          "data": {
            "$set": {
              "genisys.inSkype": false
            }
          }
        }
      }
    }
  },
  "noevents": [{
    "type": "meshblu",
    "params": {
      "operation": "update",
      "uuid": "{{data.genisys.roomId}}",
      "as": "{{data.uuid}}",
      "data": {
        "$unset": {
          "genisys.inSkype": true
        }
      }
    }
  }]
}
