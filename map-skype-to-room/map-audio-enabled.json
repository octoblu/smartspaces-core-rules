{
  "if": {
    "updateAudioEnabledWhenTrue": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".state.audioEnabled",
            "operator": "equal",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.uuid}}",
          "data": {
            "$set": {
              "genisys.audioEnabled": true
            }
          }
        }
      }
    },
    "updateAudioEnabledWhenFalse": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "operator": "exists",
            "path": ".genisys.roomId",
            "value": true
          },
          {
            "fact": "data",
            "operator": "equal",
            "path": ".state.audioEnabled",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.genisys.customerDevices.customer.uuid}}",
          "data": {
            "$set": {
              "genisys.audioEnabled": false
            }
          }
        }
      }
    }
  },
  "else": {
    "unset": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.roomId}}",
          "as": "{{data.genisys.customerDevices.customer.uuid}}",
          "data": {
            "$unset": {
              "genisys.audioEnabled": false
            }
          }
        }
      }
    }
  }
}
