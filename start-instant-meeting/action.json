{
  "if": {
    "startMeeting": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-instant-meeting"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "message",
          "message": {
            "devices": [
              "*",
              "{{device.genisys.devices.endo-genisys-meeting.uuid}}"
            ],
            "metadata": {
              "jobType": "UpsertMeeting"
            },
            "data": {
              "subject": "Instant Meeting",
              "room": {
                "roomId": "{{data.roomId}}"
              },
              "attendees": [ ]
            }
          }
        }
      }
    }
  }
}
