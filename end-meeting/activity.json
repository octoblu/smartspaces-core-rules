{
  "if": {
    "addPeopleInRoom": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.currentMeeting",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$set": {
              "genisys.activities.endMeeting": {
                "title": "End Meeting",
                "people": "{{data.genisys.people.byAttendee.isAttendee}}",
                "meetingId": "{{data.genisys.currentMeeting.meetingId}}",
                "roomId": "{{data.uuid}}",
                "message": {
                  "devices": ["*"],
                  "metadata": {
                    "jobType": "end-meeting"
                  },
                  "data": {
                    "meetingId": "{{data.genisys.currentMeeting.meetingId}}",
                    "room": {"$ref": "meshbludevice://{{data.uuid}}"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "else": {
    "unset": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$unset": {
              "genisys.activities.endMeeting": true
            }
          }
        }
      }
    }
  }
}
