{
  "if": {
    "endMeetingInRoom": {
      "conditions": {
        "all": [
          {
            "fact": "device",
            "path": ".genisys.customerDevices.meetingGroupEndoMeeting.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "end-meeting"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "message",
          "message": {
            "devices": ["{{device.genisys.devices.meetingGroupEndoMeeting.uuid}}"],
            "metadata": {
              "jobType": "EndMeeting"
            },
            "data": {
              "meetingId": "{{data.data.meetingId}}"
            }
          }
        }
      }
    }
  }
}
