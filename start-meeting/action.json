{
  "rules": {
    "startMeeting": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.event",
            "operator": "equal",
            "value": "click"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "message",
          "message": {
            "devices": ["{{device.genisys.devices.endo-genisys-meeting.uuid}}"],
            "metadata": {
              "jobType": "UpsertMeeting"
            },
            "data": {
                "subject": "Instant Meeting",
                "room": {
                  "roomId": "{{data.data.device.genisys.roomId}}"
                },
                "attendees": []
            }
          }
        }
      }
    }
  }
}
