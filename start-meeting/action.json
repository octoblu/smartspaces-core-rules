{
  "if": {
    "startMeeting": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-meeting"
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "message",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "message": {
            "devices": ["{{device.genisys.customerDevices.meetingGroupEndoMeeting.uuid}}"],
            "metadata": {
              "jobType": "UpsertMeeting",
              "emittingDevice": {
                "uuid": "{{device.uuid}}",
                "name": "{{device.name}}"
              }
            },
            "data": {
              "subject": "Instant Meeting",
              "room": {
                "roomId": "{{fromDevice.genisys.roomId}}"
              },
              "attendees": []
            }
          }
        }
      }
    },
    "startMeetingEarly": {
      "conditions": {
        "all": [
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.nextMeeting",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-meeting"
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.nextMeeting.startTime",
            "operator": "minutesUntil",
            "value": 5
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.currentMeeting",
            "operator": "exists",
            "value": false
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.inSkype",
            "operator": "notEqual",
            "value": true
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.nextMeeting.metadata.exchange.joinOnlineMeetingUrl",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "uuid": "{{fromDevice.genisys.room.genisys.devices.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.meeting": {
                  "url": "{{fromDevice.genisys.room.genisys.nextMeeting.metadata.exchange.joinOnlineMeetingUrl}}"
              },
              "desiredState.videoEnabled": true,
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    }
  },
  "else": {
    "startMeetingBeforeNext": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-meeting"
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.currentMeeting",
            "operator": "exists",
            "value": false
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.inSkype",
            "operator": "notEqual",
            "value": true
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.roomId",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.nextMeeting",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "message",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "message": {
            "devices": ["{{device.genisys.customerDevices.meetingGroupEndoMeeting.uuid}}"],
            "metadata": {
              "jobType": "UpsertMeeting",
              "emittingDevice": {
                "uuid": "{{device.uuid}}",
                "name": "{{device.name}}"
              }
            },
            "data": {
              "subject": "Instant Meeting",
              "room": {
                "roomId": "{{fromDevice.genisys.roomId}}"
              },
              "attendees": []
            }
          }
        }
      }
    }
  }
}
