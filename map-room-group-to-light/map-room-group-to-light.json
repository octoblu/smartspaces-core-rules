{
  "if": {
    "updateLightWhenCurrentMeetingExists": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.hue-light.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.currentMeeting",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.hue-light.uuid}}",
          "as": "{{device.genisys.devices.customer.uuid}}",
          "data": {
            "$set": {
              "desiredState": {
                "color": "#440000",
                "on": true
              }
            }
          }
        }
      }
    }
  },
  "else": {
    "updateLightWhenNoCurrentMeetingExists": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.hue-light.uuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.hue-light.uuid}}",
          "as": "{{device.genisys.devices.customer.uuid}}",
          "data": {
            "$set": {
              "desiredState": {
                "color": "#004400",
                "on": true
              }
            }
          }
        }
      }
    }
  }
}
