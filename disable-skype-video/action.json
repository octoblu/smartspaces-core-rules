{
  "rules": {
    "disableSkypeVideoInSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "disable-skype-video"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.devices.skype-group.uuid}}",
          "uuid": "{{data.data.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.videoEnabled": false
            }
          }
        }
      }
    }
  }
}
