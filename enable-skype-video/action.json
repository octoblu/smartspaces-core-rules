{
  "if": {
    "enableSkypeVideoInSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.skype.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "enable-skype-video"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.devices.customer.uuid}}",
          "uuid": "{{data.data.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.videoEnabled": true
            }
          }
        }
      }
    }
  }
}
