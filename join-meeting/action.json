{
  "if": {
    "joinMeeting": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "join-meeting"
          },
          {
            "fact": "device",
            "path": ".user",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".data.meetingId",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "uuid": "{{data.data.meetingId}}",
          "data": {
            "$addToSet": {
              "genisys.attendees": { "name": "{{device.user.name}}", "email": "{{device.user.email}}"},
              "genisys.newAttendees": { "name": "{{device.user.name}}", "email": "{{device.user.email}}"}
            }
          }
        }
      }
    }
  }
}
