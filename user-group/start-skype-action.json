{
  "rules": {
    "startSkypeInRoom": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".topic",
            "operator": "equals",
            "value": "start-skype"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.room.uuid}}",
          "data": {
            "$set": {
                "genisys.inSkype": true,
                "genisys.enableAudio": true
            }
          }
        }
      }
    },
    "setSkypeUrlOnSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".topic",
            "operator": "equals",
            "value": "start-skype"
          },
          {
            "fact": "data",
            "path": ".genisys.skypeDeviceUuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.currentMeeting.exchange.urls.com.citrix.meet.0.url",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.room.genisys.skypeDeviceUuid}}",
          "data": {
            "$set": {
              "desiredState.meeting": {
                  "url": "{{data.room.genisys.currentMeeting.exchange.urls.com.citrix.meet.0.url}}"
              },
              "desiredState.videoEnabled": true,
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    },
    "unsetSkypeUrlOnSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.actions.start-skype",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.skypeDeviceUuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.currentMeeting.exchange.urls.com.citrix.meet.0.url",
            "operator": "exists",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.room.genisys.skypeDeviceUuid}}",
          "data": {
            "$set": {
              "desiredState.meeting": {
                  "url": null
              },
              "desiredState.videoEnabled": true,
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    }
  }
}
