{
  "if": {
    "addPeopleInRoom": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.inSkype",
            "operator": "equal",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$set": {
              "genisys.activities.resetSkype": {
                "title": "Reset Skype",
                "order": 40,
                "people": "{{data.genisys.peopleInRoom}}",
                "roomId": "{{data.uuid}}",
                "message": {
                  "devices": ["*", "{{device.genisys.customerDevices.activitiesGroup.uuid}}"],
                  "metadata": {
                    "jobType": "reset-skype"
                  },
                  "data": {
                    "roomId": "{{data.uuid}}",
                    "room": {"$ref": "meshbludevice://{{data.uuid}}"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "else": {
    "unset": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$unset": {
              "genisys.activities.resetSkype": true
            }
          }
        }
      }
    }
  }
}
