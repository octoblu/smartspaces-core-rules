{
  "rules": {
    "disableSkypeAudioInSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "disable-skype-audio"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    }
  }
}
