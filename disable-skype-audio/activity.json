{
  "if": {
    "disableSkypeAudioActivity": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.inSkype",
            "operator": "equal",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.audioEnabled",
            "operator": "equal",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$set": {
              "genisys.activities.disableSkypeAudio": {
                "title": "Disable Audio",
                "order": 20,
                "people": "{{data.genisys.people.byAttendee.isAttendee}}",
                "meetingId": "{{data.genisys.currentMeeting.meetingId}}",
                "roomId": "{{data.uuid}}",
                "message": {
                  "devices": ["*"],
                  "metadata": {
                    "jobType": "disable-skype-audio"
                  },
                  "data": {
                    "skype": "{{data.genisys.devices.skype}}"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "else": {
    "unset": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.devices.activities.uuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.genisys.devices.activities.uuid}}",
          "as": "{{data.uuid}}",
          "data": {
            "$unset": {
              "genisys.activities.disableSkypeAudio": true
            }
          }
        }
      }
    }
  }
}
