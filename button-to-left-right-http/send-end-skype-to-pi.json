{
  "if": {
    "sendEndSkype": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.device.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".data.action",
            "operator": "equal",
            "value": "click"
          },
          {
            "fact": "data",
            "path": ".data.device.genisys.room.genisys.inSkype",
            "operator": "equal",
            "value": true
          }
        ]
      },
      "event": {
        "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "message",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "message": {
            "devices": [ "{{data.data.device.uuid}}" ],
            "data": {
              "action": "endSkype"
            }
          }
        }
      }
    }
  }
}
