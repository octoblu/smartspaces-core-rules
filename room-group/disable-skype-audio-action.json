{
  "rules": {
    "disableSkypeAudioOnSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.actions.disable-skype-audio",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".genisys.skypeDeviceUuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.room.genisys.skypeDeviceUuid}}",
          "data": {
            "$set": {
              "desiredState.audioEnabled": false
            }
          }
        }
      }
    },
    "removeDisableSkypeAudioAction": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".genisys.actions.disable-skype-audio",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{data.uuid}}",
          "data": {
            "$unset": {
              "genisys.actions.disable-skype-audio": true
            }
          }
        }
      }
    }
  }
}
