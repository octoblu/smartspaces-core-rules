{
  "if": {
    "startSkype": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.action",
            "operator": "equal",
            "value": "click"
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.devices.skype.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "fromDevice",
            "path": ".genisys.room.genisys.inSkype",
            "operator": "notEqual",
            "value": true
          }
        ]
      },
      "event":  {
        "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{fromDevice.genisys.customerDevices.customer.uuid}}",
          "uuid": "{{fromDevice.genisys.devices.room.uuid}}",
          "data": {
            "$set": {
              "genisys.inSkype": true
            }
          }
        }
      }
    }
  }
}
