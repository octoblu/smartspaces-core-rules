{
  "if": {
    "updateRoomStatusWhenRoomChanges": {
      "conditions": {
        "all": [
          {
            "fact": "device",
            "operator": "exists",
            "path": ".genisys.devices.roomGroupStatus.uuid",
            "value": true
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{device.genisys.devices.roomGroupStatus.uuid}}",
          "data": {
            "$set": {
              "genisys.rooms.{{data.uuid}}": {
                "uuid": "{{data.uuid}}",
                "name": "{{data.name}}",
                "genisys": "{{data.genisys}}"
              }
            }
          }
        }
      }
    }
  }
}
