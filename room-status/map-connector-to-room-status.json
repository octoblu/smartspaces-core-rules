{
  "if": {
    "errors": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".errors",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
       "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{device.uuid}}",
          "data": {
            "$set": {
              "components.{{data.owner}}.errors": "{{data.errors}}",
              "components.{{data.owner}}.statusDevice": "{{data.uuid}}"
            }
          }
        }
      }
    }
  }
}
