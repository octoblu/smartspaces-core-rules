{
  "if": {
    "sendStartSkype": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".data.room.genisys.devices.skype.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-skype"
          },
          {
            "fact": "data",
            "path": ".data.room.genisys.currentMeeting.metadata.exchange.joinOnlineMeetingUrl",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".data.room.genisys.currentMeeting.metadata.exchange.joinOnlineMeetingUrl",
            "operator": "notEqual",
            "value": null
          }
        ]
      },
      "event": {
        "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "message",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "message": {
            "devices": [ "{{device.genisys.devices.powermate.uuid}}" ],
            "data": {
              "action": "startSkype"
            }
          }
        }
      }
    }
  }
}
