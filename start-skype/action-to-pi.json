{
  "if": {
    "sendStartSkype": {
      "conditions": {
        "all": [
          {
            "fact": "device",
            "path": ".uuid",
            "operator": "exists",
            "value": true
          }
        ]
      },
      "event": {
        "retry": true,
        "type": "meshblu",
        "params": {
          "operation": "message",
          "as": "{{device.genisys.customerDevices.customer.uuid}}",
          "message": {
            "devices": [ "{{device.genisys.customerDevices.customer.uuid}}" ],
            "data": {
              "action": "startSkype"
            }
          }
        }
      }
    }
  }
}
