{
  "rules": {
    "setSkypeUrlOnSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "device",
            "path": ".genisys.room.genisys.currentMeeting",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "device",
            "path": ".genisys.room.genisys.inSkype",
            "operator": "equal",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.devices.skype-group.uuid}}",
          "uuid": "{{data.data.room.genisys.roomDevices.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.meeting": {
                  "url": "{{data.data.room.genisys.currentMeeting.metadata.exchange.urls.com.citrix.meet.0.url}}"
              },
              "desiredState.videoEnabled": true,
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    },
    "setNullSkypeUrlOnSkypeDevice": {
      "conditions": {
        "all": [
          {
            "fact": "data",
            "path": ".metadata.jobType",
            "operator": "equal",
            "value": "start-skype"
          },
          {
            "fact": "data",
            "path": ".data.room.genisys.roomDevices.skype.uuid",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "data",
            "path": ".data.room.genisys.currentMeeting.metadata.exchange.urls.com.citrix.meet.0.url",
            "operator": "exists",
            "value": false
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "as": "{{device.genisys.devices.skype-group.uuid}}",
          "uuid": "{{data.data.room.genisys.roomDevices.skype.uuid}}",
          "data": {
            "$set": {
              "desiredState.meeting": {
                  "url": null
              },
              "desiredState.videoEnabled": true,
              "desiredState.audioEnabled": true
            }
          }
        }
      }
    }
  }
}
